# Bundler utilities.
# https://bundler.io

install_bundle() {
  if ! command_exists bundle; then
    bundle install --gemfile $DOTFILES/packages/Gemfile --quiet
    rm -rf $DOTFILES/packages/Gemfile.lock
  fi
}

update_bundle() {
  if ! command_exists bundle; then
    bundle update --gemfile $DOTFILES/packages/Gemfile --quiet
    rm -rf $DOTFILES/packages/Gemfile.lock
  fi
}
